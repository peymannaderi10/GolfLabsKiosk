{
  "name": "golflabskiosk",
  "version": "1.1.4",
  "description": "Golf Labs Kiosk Application",
  "main": "main.js",
  "overrides": {
    "tar": "^6.2.1"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder",
    "package": "powershell -Command \"$packageJson = Get-Content package.json | ConvertFrom-Json; $version = $packageJson.version; $date = Get-Date -Format 'yyyy-MM-dd'; $zipName = \\\"GolfLabsKiosk-v$version-$date.zip\\\"; $exeName = \\\"Golf Labs Kiosk Setup $version.exe\\\"; if (Test-Path $zipName) { Remove-Item $zipName }; Compress-Archive -Path \\\"dist/$exeName\\\", 'README.md', 'config.example.json' -DestinationPath $zipName; Write-Host \\\"Distribution package created: $zipName\\\"\""
  },
  "keywords": [
    "golf",
    "kiosk",
    "simulator"
  ],
  "author": "Golf Labs US",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "socket.io-client": "^4.7.5"
  },
  "build": {
    "appId": "com.golflabs.kiosk",
    "productName": "Golf Labs Kiosk",
    "icon": "assets/GolfLabs.png",
    "files": [
      "main.js",
      "main/**/*",
      "preload.js",
      "js/**/*",
      "css/**/*",
      "index.html",
      "admin.html",
      "admin.js",
      "admin.css",
      "config.example.json",
      "assets/**/*"
    ],
    "extraFiles": [
      "watchdog.vbs",
      "watchdog.bat"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/GolfLabs.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh"
    }
  }
}
